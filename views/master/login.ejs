    <input type="text" id="password" placeholder="Your Password" >
    <span id="warn" class="text-danger"></span>
    <button type="submit" onclick="sendData()" >Save</button> -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    function sendData() {

      if (document.getElementById("number").value != "" && document.getElementById("password").value != "") {
        obj = {
          "name": 'pratik',
          "pass": 'hje'
        }
        $.ajax(
          {
            "method": "post",
            "url": "/admin-login",
            "data": obj
          }

        ).done((response) => {
          if (response == 0) {
            document.getElementById("warn").innerText = "No admin found";
          }
          else {
            location.href = "/";
          }
        }
        )
      }
      else {
        document.getElementById("warn").innerText = "Please fill details";
      }
    }

  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>